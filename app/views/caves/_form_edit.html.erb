            slideTime(event, ui, "dom", "DP");
        });

        var input = (document.getElementById('cafe_address'));
        var autocomplete = new google.maps.places.Autocomplete(input);

        google.maps.event.addListener(autocomplete, 'place_changed', function() {

            var place = autocomplete.getPlace();
            if (!place.geometry) {
                return;
            }

            if (place.geometry.viewport) {
                map.fitBounds(place.geometry.viewport);
            } else {
                document.getElementById('cafe_lat').value = (place.geometry.location).lat();
                document.getElementById('cafe_lng').value = (place.geometry.location).lng();
                document.getElementById("cafe_add").style.display = "block";
            }
        });
    }

    function hideUpdate() {
        document.getElementById("cafe_add").style.display = "none";
    }

    google.maps.event.addDomListener(window, 'load', initialize);

