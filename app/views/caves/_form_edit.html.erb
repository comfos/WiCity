        <% end %>

        <% if(!(@cafe.GM).nil? && !(@cafe.GP).nil?) then %>
            getRange("<%= @cafe.GM.split(" - ")[0] %>", "GMa");
            getRange("<%= @cafe.GM.split(" - ")[1] %>", "GMb");
            getRange("<%= @cafe.GP.split(" - ")[0] %>", "GPa");
            getRange("<%= @cafe.GP.split(" - ")[1] %>", "GPb");
        <% end %>

        <% if(!(@cafe.VM).nil? && !(@cafe.VP).nil?) then %>
            getRange("<%= @cafe.VM.split(" - ")[0] %>", "VMa");
            getRange("<%= @cafe.VM.split(" - ")[1] %>", "VMb");
            getRange("<%= @cafe.VP.split(" - ")[0] %>", "VPa");
