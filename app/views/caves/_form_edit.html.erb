            getRange("<%= @cafe.LP.split(" - ")[0] %>", "LPa");
            getRange("<%= @cafe.LP.split(" - ")[1] %>", "LPb");
        <% end %>

        <% if(!(@cafe.MM).nil? && !(@cafe.MP).nil?) then %>
