<script type="text/javascript" src="http://google-maps-utility-library-v3.googlecode.com/svn/tags/markerclusterer/1.0/src/markerclusterer_packed.js"></script>

<script type="text/javascript">

    var map, circle, markerC, bounds;
    var infowindow = null;

    function initialize() {
        var mapOptions = {
            zoom: 16,
            center: new google.maps.LatLng(37.508059, 375.082752)
        };
        map = new google.maps.Map(document.getElementById('map-canvas'), mapOptions);
        addNodos();
        addCircle();
    }

    function addCircle() {
        markerC = new google.maps.Marker({
            map: map,
            position: map.getCenter(),
            draggable: true,
            title: 'Marker C'
        });

        var circle = new google.maps.Circle({
            map: map,
            clickable: false,
            radius: 500,
            fillColor: '#fff',
            fillOpacity: .4,
            strokeColor: '#313131',
            strokeOpacity: .4,
            strokeWeight: .8
        });
        circle.bindTo('center', markerC, 'position');

        google.maps.event.addListener(markerC, 'dragend', function() {
            resetMarker();
            bounds = circle.getBounds();
            printMarker();
        });
    }

    var marker_array_lat = [];
    var marker_array_lng = [];
    function addNodos() {
        <% @nodos.each do |itm| %>
            var node_lat = parseFloat("<%= itm.lat %>");
            marker_array_lat.push(node_lat);
            var node_lng = parseFloat("<%= itm.lng %>");
            marker_array_lng.push(node_lng);
        <% end %>
        alert(marker_array_lng.length);
    }

    var markerInside = [];
    var icon = { anchor: new google.maps.Point(11, 11), url: "http://denovobiolabs.com/images/dot.png"};
    function printMarker() {
        for(var i = 0; i < marker_array_lng.length; i++)
        {
            var mCoord = new google.maps.LatLng(marker_array_lat[i], marker_array_lng[i]);
            if(bounds.contains(mCoord))
            {
                var marker = new google.maps.Marker({
                    position: mCoord,
                    icon: icon,
                    map: map
                });
                markerInside.push(marker);
            }
        }
    }

    function resetMarker() {
        for (var i = 0; i < markerInside.length; i++) {
            markerInside[i].setMap(null);
        }
    }

    google.maps.event.addDomListener(window, 'load', initialize);

</script>

