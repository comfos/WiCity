    function addMarker() {
        var bounds = circle.getBounds();
        var marker;
        var i=0;
        if(cpharm) {
            <% @pharms.each do |pharm| %>
                var coord = new google.maps.LatLng(<%= pharm.lat %>, <%= pharm.lng %>);
                if( bounds.contains(coord) ) {
                    if('<%= isOpen(pharm) %>') {
                        var icon = '/assets/marker/pharm.png';
                    }
                    else {
                        var icon = '/assets/marker/cpharm.png';
                    }
                    marker = new google.maps.Marker({
                        position: coord,
                        map: map,
                        icon: icon,
                        title: '<%= pharm.name %>'
                        });
                    infowindow = new google.maps.InfoWindow({
                            content: '<span class="infowin"><%= pharm.name %></span>'
                    });
                    google.maps.event.addListener(marker, 'click', function () {
                        if('<%= isOpen(pharm) %>') {
                            <% if params[:time] %>
                                infowindow.setContent('<a href="<%= "#{pharms_url}/#{pharm.id}" %>?lat='+mypos.lat()+'&lng='+mypos.lng()+'&time=<%= params[:time] %>" target="_parent"><%= pharm.name %></a>');
                            <% else %>
                                infowindow.setContent('<a href="<%= "#{pharms_url}/#{pharm.id}" %>?lat='+mypos.lat()+'&lng='+mypos.lng()+'" target="_parent"><%= pharm.name %></a>');
                            <% end %>
                        }
                        else {
                            <% if params[:time] %>
                                infowindow.setContent('<a href="<%= "#{pharms_url}/#{pharm.id}" %>?lat='+mypos.lat()+'&lng='+mypos.lng()+'&time=<%= params[:time] %>&s=close" target="_parent"><%= pharm.name %></a>');
                            <% else %>
                                infowindow.setContent('<a href="<%= "#{pharms_url}/#{pharm.id}" %>?lat='+mypos.lat()+'&lng='+mypos.lng()+'&s=close"" target="_parent"><%= pharm.name %></a>');
                            <% end %>
                        }
                        infowindow.open(map, this);
                    });
                    markers_pharms[i] = marker;
                    i++;
                }
            <% end %>
            /*markerClusterer_pharm = new MarkerClusterer(map, markers_pharms, {
             styles: styles[0]
             });*/
            markerClusterer_pharm = new MarkerClusterer(map, markers_pharms);
        }
    }

    function clearClusters() {
        markerClusterer_pharm.clearMarkers();
    }

    function choice() {
        var pharm = document.getElementById("pharm");
        google.maps.event.addDomListener(pharm, 'click', choiceElement);
    }

    var cpharm = true;
    function choiceElement() {
        if(cpharm) {
            $("#pharm").fadeTo( "slow", 0.30 );
            cpharm = false;
        } else {
            $("#pharm").fadeTo( "slow", 1 );
            cpharm = true;
        }
        removeMarker();
        clearClusters();
        addMarker();
    }

</script>


